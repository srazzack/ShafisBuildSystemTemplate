block tags

  - title = title || 'title'
  - desc = desc || 'desc'
  - keywords = keywords || 'keywords'
  - author = author || 'author'

meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible', content='IE=edge')

title #{title}

meta(name='description', content='#{desc}')
meta(name='viewport', content='width=device-width, initial-scale=1, minimal-ui')
meta(name='keywords', content='#{keywords}')
meta(name='author', content='#{author}')
link(rel="shortcut icon", href="/touch/favicon.ico", type="image/x-icon")

//- android and chrome
meta(name='mobile-web-app-capable', content='yes')
link(rel='icon', sizes='196x196', href='/touch/chrome-touch-icon-196x196.png')

//- ios
meta(name='apple-mobile-web-app-capable', content='yes')
meta(name='apple-mobile-web-app-status-bar-style', content='black')
meta(name='apple-mobile-web-app-title', content='#{title}')
link(rel='apple-touch-icon', href='/touch/apple-touch-icon-57x57.png', sizes='57x57')
link(rel='apple-touch-icon', href='/touch/apple-touch-icon-72x72.png', sizes='72x72')
link(rel='apple-touch-icon', href='/touch/apple-touch-icon-76x76.png', sizes='76x76')
link(rel='apple-touch-icon', href='/touch/apple-touch-icon-114x114.png', sizes='114x114')
link(rel='apple-touch-icon', href='/touch/apple-touch-icon-120x120.png', sizes='120x120')
link(rel='apple-touch-icon', href='/touch/apple-touch-icon-144x144.png', sizes='144x144')
link(rel='apple-touch-icon', href='/touch/apple-touch-icon-152x152.png', sizes='152x152')

//- windows 8
meta(name='msapplication-TileImage', content='/touch/ms-touch-icon-144x144-precomposed.png')
meta(name='msapplication-TileColor', content='#3372DF')

if canonical
  link(rel='canonical', href='#{canonical}')

if noIndex
  meta(name='robots', content='noindex,nofollow')

